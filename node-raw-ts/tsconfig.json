{
  "include": ["./resolve.ts"],
  "compilerOptions": {
    "noErrorTruncation": true,

    "lib": ["es2015", "es2017.object", "esnext.asynciterable"],

    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "composite": true,
    "esModuleInterop": true,
    "jsx": "react",
    "newLine": "LF",
    "noEmitOnError": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strict": true,
    "skipLibCheck": true
  }
}
